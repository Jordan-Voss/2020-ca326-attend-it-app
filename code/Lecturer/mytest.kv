WindowManager:
	MainWindow:
	Second:
	Third:
	Fourth:
	Fifth:
	Grafico:

<MainWindow>:
	name:"login"
	username : usern
	passw : passw

	GridLayout:
		cols:1

		GridLayout:
			cols:1
			Label:
				text: "LOGIN"
			Label:
				text: "username:"
				
			TextInput:
				id: usern
				multiline : False

			Label:
				text: "Password"

			TextInput:
				id: passw
				multiline : False

		Button:
			text: "Submit"
			on_press: root.btn()
			on_release: 
				root.verify_credentials()
				 

				root.manager.transition.direction = "left"

<Second>:
	name:"homepage"

	GridLayout:
		cols:1

		GridLayout:
			cols:1
			Label:
				text: "LECTURE HOMEPAGE"

			Button:
				text: "CLASS"
				on_release:
					root.manager.current="Class" 




			Button:
				text: "TIMETABLE"
				on_release:
					root.manager.current= "grafico"
			Button:
				text: "ANALYSIS"
				on_release:
					app.root.current = "analysis"
					root.manager.transition.directin="right"

			Label:

			Button:
				text: "LOGOUT"
				on_release:
					app.root.current = "login"
					root.manager.transition.direction = "right"

	
<Third>:
	name: "Class"
	Label:
		text:root.collect()


<Fourth>:
	name:"Timetable"


<Fifth>:
	name: "analysis"
	
	GridLayout:
		cols:1

		GridLayout:
			cols:1
			Label:
				text: "LOGIN"
			Label:
				text: "username:"
				
			TextInput:
				id: usern
				multiline : False


		Button:
			text: "HOMEPAGE"
			on_release:
				app.root.current = "homepage"
				root.manager.transition.direction = "left"

<Grafico>
	name: "grafico"
	