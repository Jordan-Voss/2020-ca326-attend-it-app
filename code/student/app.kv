WindowManager:
    LoginWindow:
    MainWindow:
    SecondWindow:

<LoginWindow>:
    name:"login"

	GridLayout:
		cols:1

		GridLayout:
			cols:1
			Label:
				text: "STUDENT LOGIN"
			Label:
				text: "Username: "
			TextInput:
				multiline : False

			Label:
				text: "Password"

			TextInput:
				id: passw
				multiline : False

		Button:
			text: "Submit"

			on_release:
				app.root.current = "main" #if passw.text == "lec" else "login"
				root.manager.transition.direction = "left"

<MainWindow>:
    name: "main"
    nam: nam

    GridLayout:
        cols:1
        size: root.width -100, root.height -100

        GridLayout:
            cols:3
            size:root.width-100,root.height -400
            Label:
                text: "Module Name: "

            TextInput:
                id: nam
                multiline:False


        Button:
            text:"Add Module"
            size_hint:.5,.5
            on_press:root.pressed()

        Button:
            text:"Next"
            size_hint:.5,.5
            on_press:
                app.root.current = "second"
                root.pr()
                root.manager.transition.direction = "left"
        Button:
            text:"Back"
            size_hint:.5,.5
            on_press:
                app.root.current = "login"
                root.manager.transition.direction = "left"


<SecondWindow>:
    name: "second"
    loc:loc
    GridLayout:
        cols:1
        GridLayout:
            cols:6
            Label:
            Spinner:
                id: spinner_1
                values: root.pickType
                on_text: root.updateSubSpinner(spinner_1.text)
                text: "Select Module"
            Spinner:
                # Assigning id
                id: spinner_id

                # Callback
                on_text: root.spinner_clicked(spinner_id.text)

                # initially text on spinner
                text: "self.modules"

                # total values on spinner
                #values: root.modules()
                #values: root.modules
                # declaring size of the spinner
                # and the position of it
            Spinner:
                # Assigning id
                id: spinner_2

                # Callback
                on_text: root.spinner_clicked(spinner_2.text)

                # initially text on spinner
                text: "Day"

                # total values on spinner
                values: ["Monday", "Tuesday"]
            Spinner:
                # Assigning id
                id: spinner_3

                # Callback
                on_text: root.spinner_clicked(spinner_3.text)

                # initially text on spinner
                text: "Time"

                # total values on spinner
                values: ["6h-7h", "7h-8h"]

                # declaring size of the spinner
                # and the position of it

            Label:
                text: "Module Location: "

            TextInput:
                id: loc
                multiline:False
        Button:
            text: "Add Module"
            on_press: root.mod_but_press(spinner_id.text,spinner_2.text)
        Button:
            text: "Next"
