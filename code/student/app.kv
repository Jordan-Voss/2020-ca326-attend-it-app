WindowManager:
    LoginWindow:
    MainWindow:
    SecondWindow:
    ThirdWindow:
    StudyTTWindow:

<LoginWindow>:
    name:"login"
	GridLayout:
		cols:1

		GridLayout:
			cols:1
			Label:
				text: "STUDENT LOGIN"
			Label:
				text: "Username: "
			TextInput:
                id:usr
				multiline : False

			Label:
				text: "Password"

			TextInput:
				id: passw
				multiline : False

		Button:
			text: "Submit"

			on_release:
				app.root.current = "main" #if passw.text == "lec" else "login"
				root.manager.transition.direction = "left"

<MainWindow>:
    name: "main"
    nam: nam

    GridLayout:
        cols:1
        size: root.width -100, root.height -100

        GridLayout:
            cols:3
            size:root.width-100,root.height -400
            Label:
                text: "Module Name: "

            TextInput:
                id: nam
                multiline:False


        Button:
            text:"Add Module"
            size_hint:.5,.5
            on_press:root.pressed()

        Button:
            text:"Next"
            size_hint:.5,.5
            on_press:
                app.root.current = "second"
                root.pr()
                root.manager.transition.direction = "left"
        Button:
            text:"Back"
            size_hint:.5,.5
            on_press:
                app.root.current = "login"
                root.manager.transition.direction = "left"


<SecondWindow>:
    name: "second"
    loc:loc
    GridLayout:
        cols:1
        GridLayout:
            cols:6
            Label:
            Spinner:
                id: spinner_1
                values: root.pickType
                on_text: root.updateSpinner(spinner_1.text)
                text: "Select Module"
            Spinner:
                id: spinner_2
                on_text: root.spinner_clicked(spinner_2.text)
                text: "Day"
                values: ["Monday", "Tuesday"]
            Spinner:
                id: spinner_3
                on_text: root.spinner_clicked(spinner_3.text)
                text: "Time"
                values: ["6h-7h", "7h-8h"]
            Label:
                text: "Module Location: "
            TextInput:
                id: loc
                multiline:False
        Button:
            text: "Add Module"
            on_press: root.mod_but_press(spinner_1.text,spinner_2.text,spinner_3.text, loc.text)
        Button:
            text: "Next"
            on_press:
                app.root.current = "third"
                root.manager.transition.direction = "left"
<ThirdWindow>:
    name: "third"
    hours:hours
    rnk_spin_1 :rnk_spin_1
    rnk_spin_2 :rnk_spin_2
    rnk_spin_3 :rnk_spin_3
    rnk_spin_4 :rnk_spin_4
    rnk_spin_5 :rnk_spin_5
    rnk_spin_6 :rnk_spin_6
    GridLayout:
        cols: 1
        GridLayout:
            cols:1
            Label:
                text:"Rank your modules in order of difficulty, 1 being the easiest."
            Button:
                text:"Reset"
                on_press:
                    root.reset(rnk_spin_1.text,rnk_spin_2.text,rnk_spin_3.text,rnk_spin_4.text,rnk_spin_5.text,rnk_spin_6.text)
                    app.root.current = 'third'

            GridLayout:
                cols:8

                Spinner:
                    id: rnk_spin_1
                    values: root.pickType
                    on_text: root.updateSpinner2(rnk_spin_1.text)

                    text: "6"
                Spinner:
                    id: rnk_spin_2
                    values: root.pickType
                    on_text: root.updateSpinner2(rnk_spin_2.text)
                    text: "5"
                Spinner:
                    id: rnk_spin_3
                    values: root.pickType
                    on_text: root.updateSpinner2(rnk_spin_3.text)
                    text: "4"
                Spinner:
                    id: rnk_spin_4
                    values: root.pickType
                    on_text: root.updateSpinner2(rnk_spin_4.text)
                    text: "3"
                Spinner:
                    id: rnk_spin_5
                    values: root.pickType
                    on_text: root.updateSpinner2(rnk_spin_5.text)
                    text: "2"
                Spinner:
                    id: rnk_spin_6
                    values: root.pickType
                    on_text: root.updateSpinner2(rnk_spin_6.text)
                    text: "1"

            GridLayout:
                cols:2

                Label:
                    text: "Total hours you want to study this week"
                TextInput:
                    id:hours
                    multiline:False



        Button:

            text:"Rank modules in this order"
            on_press:
                root.prs()
<StudyTTWindow>:
    name:'study'
    GridLayout:
        cols:2
        Button:
            text: "Generate my Study Timetable"
            on_press:
                root.ranks()
